<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_new_ta_query"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="in.ac.iiitd.prankul.testhimmt.StartNewTaQueryActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/title"
        android:layout_alignParentEnd="true"
        android:hint="Title" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"
        android:id="@+id/query"
        android:layout_alignParentEnd="true"
        android:hint="query" />

    <MultiAutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBroadcast"
        android:layout_alignParentStart="true"
        android:hint="Add names of people who will see this"
        android:id="@+id/students"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:text="Broadcast ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBroadcast"
        android:layout_below="@+id/query"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Send Query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/send"
        android:layout_alignParentEnd="true"
        android:onClick="clickSend" />

    <CheckBox
        android:text="Timed Activity?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/students"
        android:layout_alignParentStart="true"
        android:id="@+id/timedBroadcast" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Activity is from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:padding="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:text="FROM TIME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fromtime"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:gravity="center"
                android:onClick="clickFromTime" />

            <TextView
                android:text="to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:text="TO TIME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totime"
                android:layout_weight="0.98"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:gravity="center"
                android:onClick="clickToTime" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:text="on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:text="DATE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:gravity="center"
                android:onClick="clickDate" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
